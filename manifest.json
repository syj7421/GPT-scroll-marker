{
    "manifest_version": 3,
    "name": "Scroll Bookmark",
    "version": "1.0",
    "description": "Add bookmarks to scroll positions.",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ]
  }
  