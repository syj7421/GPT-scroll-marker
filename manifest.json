{
  "manifest_version": 3,
  "name": "ChatGPT Scroll Marker",
  "version": "2.0",
  "description": "Add bookmarks to scroll positions.",
  "permissions": ["storage"],
  "host_permissions": ["https://chatgpt.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT Scroll Marker"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
